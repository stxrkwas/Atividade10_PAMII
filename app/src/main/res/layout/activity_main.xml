<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <!-- Título da tela-->
    <TextView
        android:id="@+id/title"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_bold"
        android:foregroundTint="#000000"
        android:text="Atividade 10 - PAM II"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35dp" />

    <!-- Título do campo de texto nome: -->
    <TextView
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Nome:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <!-- Campo para inserir o nome-->
    <EditText
        android:id="@+id/edtNome"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@color/new_purple"
        android:borderColor="#000000"
        android:borderRadius="20dp"
        android:borderStyle="solid"
        android:fontFamily="@font/poppins"
        android:inputType="text"
        android:textSize="25dp" />

    <!-- Título do campo telefone -->
    <TextView
        android:id="@+id/txtTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Telefone:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <!-- Campo para inserir o telefone-->
    <EditText
        android:id="@+id/edtTelefone"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@color/new_purple"
        android:borderColor="#000000"
        android:borderRadius="20dp"
        android:borderStyle="solid"
        android:fontFamily="@font/poppins"
        android:inputType="text"
        android:textSize="25dp"

        />

    <!-- Título do campo endereço -->
    <TextView
        android:id="@+id/txtEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Endereço:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <!-- Campo para inserir o endereço-->
    <EditText
        android:id="@+id/edtEndereco"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@color/new_purple"
        android:borderColor="#000000"
        android:borderRadius="20dp"
        android:borderStyle="solid"
        android:fontFamily="@font/poppins"
        android:inputType="text"
        android:textSize="25dp" />

    <!-- Título do campo CEP-->
    <TextView
        android:id="@+id/txtCEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="CEP:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <!-- Campo para inserir o CEP-->
    <EditText
        android:id="@+id/edtCEP"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@color/new_purple"
        android:borderColor="#000000"
        android:borderRadius="20dp"
        android:borderStyle="solid"
        android:fontFamily="@font/poppins"
        android:inputType="text"
        android:textSize="25dp" />

    <!-- Título do campo Bairro-->
    <TextView
        android:id="@+id/txtBairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Bairro:"
        android:textColor="#000000"
        android:textSize="25dp" />

    <!-- Campo para inserir o Bairro-->
    <EditText
        android:id="@+id/edtBairro"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@color/new_purple"
        android:borderColor="#000000"
        android:borderRadius="20dp"
        android:borderStyle="solid"
        android:fontFamily="@font/poppins"
        android:inputType="text"
        android:textSize="25dp" />

    <!-- Botão de cadastro-->
    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@color/new_green"
        android:borderRadius="50dp"
        android:fontFamily="@font/poppins"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textSize="25dp" />

</LinearLayout>